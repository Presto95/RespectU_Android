<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <ImageView
        android:id="@+id/imageTrophy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/labelColor"
        android:layout_toRightOf="@id/imageTrophy"
        android:layout_alignTop="@id/imageTrophy"
        android:background="@color/colorPrimaryDark"
        android:layout_height="40dp"
        android:layout_width="10dp" />
    <TextView
        android:id="@+id/labelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESPECT You"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_alignTop="@id/labelColor"
        android:layout_toRightOf="@id/labelColor"
        android:layout_marginLeft="10dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"/>

    <TextView
        android:id="@+id/labelContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collected all DJMAX RESPECT Trophies."
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/labelColor"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/labelColor"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"/>

</RelativeLayout>