<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <TextView
        android:id="@+id/top50Color"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="#000000"
        android:layout_alignParentStart="true"
        android:layout_height="40dp"
        android:layout_width="10dp" />
    <TextView
        android:id="@+id/top50Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2Nite"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_alignTop="@id/top50Color"
        android:layout_toRightOf="@id/top50Color"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:id="@+id/linearTop50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top50Title"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/top50Color"
        android:layout_alignBottom="@id/top50Color"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/top50Difficulty"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="MAXIMUM"
            android:textSize="14sp"
            android:textColor="#bdbdbd"/>
        <TextView
            android:id="@+id/top50Note"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="PERFECT PLAY"
            android:textSize="14sp"
            android:textColor="#bdbdbd"/>
        <TextView
            android:id="@+id/top50Accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.00%"
            android:textSize="14sp"
            android:textColor="#bdbdbd"/>
    </LinearLayout>


    <TextView
        android:id="@+id/top50SkillPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="210.00"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@id/top50Color"
        android:layout_alignBottom="@id/top50Color"
        android:gravity="center"
        android:layout_alignParentRight="true"/>
</RelativeLayout>